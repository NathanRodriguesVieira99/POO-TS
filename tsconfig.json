{
    "compilerOptions": {
        "target": "ES2023",
        "module": "Node16",
        "lib": ["ES2023"],
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "jest.config.ts"]
}
